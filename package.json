{
  "name": "wordflow",
  "private": true,
  "version": "1.1.5",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:main": "vite build --config vite.config.ts",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "build:win": "npm run build:main && npm run build:renderer && electron-builder --win --x64",
    "build:linux": "npm run build:main && npm run build:renderer && electron-builder --linux --x64",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@floating-ui/react": "^0.27.16",
    "@mui/joy": "^5.0.0-beta.52",
    "@mui/material": "^7.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "@tailwindcss/vite": "^4.1.11",
    "@tiptap/extension-history": "^3.3.0",
    "@tiptap/extension-text-style": "^3.3.0",
    "@tiptap/extensions": "^3.3.0",
    "@tiptap/react": "^3.2.1",
    "@tiptap/starter-kit": "^3.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.542.0",
    "next-themes": "^0.4.6",
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.2",
    "react-icons": "^5.5.0",
    "react-simple-typewriter": "^5.0.1",
    "react-virtuoso": "^4.14.0",
    "simplebar-react": "^3.3.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar": "^4.0.2",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/aos": "^3.0.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "daisyui": "^5.0.52",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.yourname.notesapp",
    "productName": "NotesApp",
    "directories": {
      "buildResources": "assets",
      "output": "dist_build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/react.svg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
